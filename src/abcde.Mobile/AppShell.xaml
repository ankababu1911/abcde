<?xml version="1.0" encoding="UTF-8" ?>
<simpleShell:SimpleShell
    x:Class="abcde.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:abcde.Mobile"
    xmlns:controls="clr-namespace:abcde.Mobile.CustomControls"
    xmlns:simpleShell="clr-namespace:SimpleToolkit.SimpleShell;assembly=SimpleToolkit.SimpleShell"
    xmlns:pages="clr-namespace:abcde.Mobile.Views"
    Shell.FlyoutBehavior="Disabled">   
    
    <TabBar x:Name="tabBar">
    </TabBar>
   
    <simpleShell:SimpleShell.RootPageContainer>
        <Grid IgnoreSafeArea="True">
            <simpleShell:SimpleNavigationHost
                x:Name="pageContainer"/>
            <controls:TabBarView
                x:Name="tabBarView"
                VerticalOptions="End" HorizontalOptions="Fill"
                CurrentPageSelectionChanged="TabBarViewCurrentPageChanged"/>
            <Rectangle
                x:Name="bottomBackgroundRectangle"
                Background="{StaticResource Primary}"
                VerticalOptions="End"/>
        </Grid>
    </simpleShell:SimpleShell.RootPageContainer>

</simpleShell:SimpleShell>
