<?xml version="1.0" encoding="utf-8" ?>
<base:ContentPageBase  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:base="clr-namespace:abcde.Mobile.Views"
                  x:Class="abcde.Mobile.Views.ProfileView"
                  xmlns:resources="clr-namespace:abcde.Mobile.Resx"
                  xmlns:local="clr-namespace:abcde.Mobile.Localization"
                  BackgroundColor="{StaticResource PageBgColor}"
                  xmlns:template="clr-namespace:abcde.Mobile.Views.Templates"
                  Title="ProfileView">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Margin="20">
        <Label Text="{local:Translate User Profile}" Style="{StaticResource HeadingLabelStyle}" HorizontalTextAlignment="Center" VerticalOptions="Start"></Label>
        <Button x:Name="ChangeLanguage" Style="{StaticResource ButtonStyle}" Margin="0,20"
                Text="Change Language" Clicked="ChangeLanguage_Clicked"/>
    </VerticalStackLayout>
</base:ContentPageBase>