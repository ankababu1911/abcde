<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:abcde.Mobile"
             xmlns:converter="clr-namespace:abcde.Mobile.Converters"
             x:Class="abcde.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <StyleSheet Source="/Resources/CustomStyles/entry.css" />
        <converter:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converter:BackgroundColorConverter x:Key="BackgroundColorConverter" />
        <converter:TextColorConverter x:Key="TextColorConverter" />
        <Color x:Key="Primary">#024556</Color>
        <Style TargetType="NavigationPage">
            <Setter Property="BarTextColor" Value="#fff"/>
        </Style>
    </Application.Resources>
</Application>
